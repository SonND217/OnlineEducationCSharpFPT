<!-- Khóa học -->
<div class="content-main">
    <h2 class="Title-category">KHÓA HỌC NỔI BẬT</h2>
    <hr />
    <div class="owl-carousel owl-theme">
        @foreach (OnlineEduDB.Course item in @ViewBag.ListHL)
        {
        <div class="item">
            <div class="card_item">
                <div class="card_inner">
                    <a href="/detailcourse?CourseID=@item.CourseID"><img src="~/Content/images/@item.Image_url"></a>
                    <div class="role_name">
                        <a style="color:#e36686;" href="/detailcourse?CourseID=@item.CourseID">@item.CourseName</a>
                    </div>
                    <div class="real_name">Gv: Tony</div>
                    <div class="film">@item.Price VNĐ</div>
                    <div class="nav-detail">
                        <a class="register-course" href="">Đăng ký ngay</a>
                        <a class="detail-course" href="/detailcourse?CourseID=@item.CourseID">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        </div>
        }


    </div>

    <h2 class="Title-category" style="padding-top:80px;">NẤU ĂN CHUYÊN NGHIỆP</h2>
    <hr />
    <div class="owl-carousel owl-theme">
        @foreach (OnlineEduDB.Course item in ViewBag.ListFood)
        {
            <div class="item">
                <div class="card_item">
                    <div class="card_inner">
                        <a href="/detailcourse?CourseID=@item.CourseID"><img src="~/Content/images/@item.Image_url"></a>
                        <div class="role_name">
                            <a style="color:#e36686;" href="/detailcourse?CourseID=@item.CourseID">@item.CourseName</a>
                        </div>
                        <div class="real_name">Gv: Tony</div>
                        <div class="film">@item.Price VNĐ</div>
                        <div class="nav-detail">
                            <a class="register-course" href="">Đăng ký ngay</a>
                            <a class="detail-course" href="/detailcourse?CourseID=@item.CourseID">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


